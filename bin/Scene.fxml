<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="label" prefHeight="172.0" prefWidth="596.0" style="-fx-background-color: #222222;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <children>
      <AnchorPane fx:id="pane" prefHeight="38.0" prefWidth="566.0">
         <children>
            <Label fx:id="songLabel" alignment="CENTER" layoutX="-2.0" prefHeight="118.0" prefWidth="600.0" text="MP3 PLAYER" textFill="#00ff1a">
               <font>
                  <Font size="65.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <ProgressBar fx:id="songProgressBar" layoutY="121.0" prefHeight="18.0" prefWidth="600.0" progress="0.0" />
      <Button fx:id="playButton" layoutY="140.0" mnemonicParsing="false" onAction="#playMedia" prefHeight="45.0" prefWidth="73.0" text="Play">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="pauseButton" layoutX="74.0" layoutY="140.0" mnemonicParsing="false" onAction="#pauseMedia" prefHeight="45.0" prefWidth="73.0" text="Pause">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="resetButton" layoutX="148.0" layoutY="140.0" mnemonicParsing="false" onAction="#resetMedia" prefHeight="45.0" prefWidth="73.0" text="Reset">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="previousButton" layoutX="222.0" layoutY="140.0" mnemonicParsing="false" onAction="#previousMedia" prefHeight="45.0" prefWidth="73.0" text="Previous">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
      <Button fx:id="nextButton" layoutX="296.0" layoutY="140.0" mnemonicParsing="false" onAction="#nextMedia" prefHeight="45.0" prefWidth="73.0" text="Next">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ComboBox fx:id="speedBox" layoutX="370.0" layoutY="139.0" onAction="#changeSpeed" prefHeight="46.0" prefWidth="90.0" promptText="Speed" />
      <Slider fx:id="volumeSlider" layoutX="460.0" layoutY="155.0" max="100.0" value="50.0" />
   </children>
</AnchorPane>
